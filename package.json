{
  "name": "movie-app",
  "version": "1.0.0",
  "description": "Online directory for Indian movies currently showing in Australia",
  "main": "app/app.js",
  "scripts": {
    "start": "npm run build && node ./app/start.js",
    "compile": "babel src --out-dir app  --watch",
    "clean": "rm -rf app && mkdir app",
    "watch": "nodemon app/start.js --ignore public",
    "dev": "concurrently \"npm run clean\" \"npm run watch\" ",
    "locallaunch": "start chrome public/app.html",
    "test": "mocha -- app/**/test/*.js --recursive ||true",
    "coverage": "istanbul cover node_modules/mocha/bin/_mocha -- --recursive",
    "coverage-report": "start chrome coverage/lcov-report/index.html",
    "sample": "node ./app/data/loadSampleData.js",
    "blowitallaway": "node ./app/data/loadSampleData.js --delete",
    "build-babel": "babel -d ./app ./src -s",
    "build": "npm run clean && npm run build-babel --watch"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^4.0.1",
    "dotenv": "^6.1.0",
    "es6-promise": "^4.2.5",
    "express": "^4.16.3",
    "imdb-api": "^4.0.2",
    "isomorphic-fetch": "^2.2.1",
    "mongoose": "^5.2.8",
    "morgan": "^1.9.1",
    "moviedb": "^0.2.10",
    "moviedb-promise": "^1.3.0",
    "slugs": "^0.1.3", 
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",

  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.2.0",
    "chai-arrays": "^2.0.0",
    "eslint": "^5.6.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/not-a-unicorn/movie-app.git"
  },
  "keywords": [
    "movie-listing",
    "indian movies",
    "now showing",
    "node",
    "css",
    "javascript"
  ],
  "contributors": [
    "Arunan Skanthan",
